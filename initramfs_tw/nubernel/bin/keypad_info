	echo "			PAD_KEY_F = 24"
	echo "			PAD_KEY_G = 25"
	echo "			PAD_KEY_H = 26"
	echo "			PAD_KEY_J = 27"
	echo "			PAD_KEY_K = 28"
	echo "			PAD_KEY_L = 29"
